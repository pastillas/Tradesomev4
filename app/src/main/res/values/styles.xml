<resources>


    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>


    <!-- Base application theme. -->
    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="signInButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="bidNowButton" >
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="followButton" >
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="categoryButton">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="checkImageButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/windowBackground</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="pinImageButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/windowBackground</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="createAccountTheme" parent="android:Theme.Material.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/tamangStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="loginTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="loginTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">d

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="detailTextSize">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="datePickerTextSize">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="itemTitleTextSize">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="posterNameTextSize">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="bidToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/tamangStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="cameraBtn">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_add_photo</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="AppTheme.NoActionBar.Messaging">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Tradesome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/tamangStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TradesomeTextTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TradesomeTextSubTitle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="RatingBar" parent="AppTheme.Tradesome">
        <item name="android:tint">@color/gray</item>
        <item name="colorControlNormal">@color/starColor</item>
        <item name="colorControlActivated">@color/starColor</item>
    </style>

    <style name="RatingBarRate" parent="AppTheme.Tradesome">
        <item name="android:tint">@color/gray</item>
        <item name="colorControlNormal">@color/starColor</item>
        <item name="colorControlActivated">@color/starColor</item>
    </style>


    <style name="userInfo">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
